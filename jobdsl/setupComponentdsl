job('ComponentSetup') {
description('Component setup job')
parameters {
  choiceParam('Component',['nginx','mysql','mongo','gitlab', 'snoopy', 'elasticsearch', 'kibana'],)
}

steps {
  shell{
    command('''\
      ansible-playbook -i /opt/osm/inventory /opt/osm/playbooks/${Component}.yaml
      '''.stripIndent())}
}

}
